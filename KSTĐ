	</p>
        <p>
            Bạn cần dành ít nhất 10 giây trên trang này trước khi bắt đầu khảo sát. Nút "Bắt đầu khảo sát" sẽ được kích hoạt sau khi bộ đếm thời gian kết thúc. Cảm ơn sự đóng góp quý báu của bạn!
        </p>
        <p>Thời gian còn lại: <span class="timer" id="timer">0</span> giây</p>
        <button id="startSurveyBtn" class="btn btn-primary">Bắt đầu khảo sát</button>
    </div>

    <!-- JavaScript for Timer and Random Redirect -->
    <script>
        $(document).ready(function() {
            let timeLeft = 10;
            const timerDisplay = $("#timer");
            const startBtn = $("#startSurveyBtn");

            // Countdown timer
            const countdown = setInterval(function() {
                timeLeft--;
                timerDisplay.text(timeLeft);
                if (timeLeft <= 0) {
                    clearInterval(countdown);
                    startBtn.prop("disabled", false);
                    timerDisplay.text("0");
                }
            }, 1000);
            // Array of Google Forms links
            const surveyLinks = [
 "https://docs.google.com/forms/d/e/1FAIpQLSc8pvtYKtH3THTE6SvjkotcYY1CwwUfhqdMWJMjCkAoCDOq0Q/viewform?usp=header", // Thay bằng link Google Form 1
                "https://docs.google.com/forms/d/e/1FAIpQLSfzx4SxkFTf8GqufCItKBy2ZcXiend6ohLmphEQdCMi4agOeg/viewform?usp=header"  // Thay bằng link Google Form 2
            ];
// Initialize form selection counts in localStorage if not present
            if (!localStorage.getItem("formCounts")) {
                localStorage.setItem("formCounts", JSON.stringify({ form1: 0, form2: 0 }));
            }

            // Function to get current form counts
            function getFormCounts() {
                return JSON.parse(localStorage.getItem("formCounts"));
            }

            // Function to update form counts
            function updateFormCounts(selectedForm) {
                let counts = getFormCounts();
                if (selectedForm === 0) {
                    counts.form1 += 1;
                } else {
                    counts.form2 += 1;
                }
                localStorage.setItem("formCounts", JSON.stringify(counts));
            }

            // Function to select form based on frequency balancing
            function selectForm() {
                let counts = getFormCounts();
                let total = counts.form1 + counts.form2;

                // If counts are equal or first selection, use random
                if (counts.form1 === counts.form2 || total === 0) {
                    return Math.floor(Math.random() * 2); // 0 or 1
                }

                // Otherwise, choose the form with fewer selections
                return counts.form1 < counts.form2 ? 0 : 1;
            }

            // Redirect on button click
            startBtn.click(function() {
                const selectedIndex = selectForm();
                updateFormCounts(selectedIndex);
                window.location.href = surveyLinks[selectedIndex];
            });
        });
    </script>

